<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.coolappz.IMCCordova" version="1.0.0">
    <name>IMCCordova</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" spec="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
        
<!--        <icon src="www/res/android/icon/ldpi.png" density="ldpi" />-->
        <icon src="www/res/android/icon/mdpi.png" density="mdpi" />
        <icon src="www/res/android/icon/hdpi.png" density="hdpi" />
        <icon src="www/res/android/icon/xhdpi.png" density="xhdpi" />
        <icon src="www/res/android/icon/xxhdpi.png" density="xxhdpi" />
        
        <!-- you can use any density that exists in the Android project -->
        <splash src="www/res/android/screen/screen_hdpi.png" density="land-hdpi"/>
        <splash src="www/res/android/screen/screen_ldpi.png" density="land-ldpi"/>
        <splash src="www/res/android/screen/screen_port_hdpi.png" density="port-hdpi"/>
        <splash src="www/res/android/screen/screen_port_ldpi.png" density="port-ldpi"/>

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
</widget>
